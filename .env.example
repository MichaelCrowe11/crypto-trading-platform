# CryptoCrowe Platform Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cryptocrowe
REDIS_URL=redis://localhost:6379

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Exchange API Keys - Coinbase
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_API_PASSPHRASE=your-coinbase-passphrase

# Exchange API Keys - Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Exchange API Keys - Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# Market Data APIs
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key

# Blockchain Provider
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key

# Web3 Authentication
WEB3AUTH_CLIENT_ID=your-web3auth-client-id

# Email Service (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@cryptocrowe.com

# Security
JWT_SECRET=generate-a-strong-random-string-here
ENCRYPTION_KEY=generate-another-strong-random-string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=generate-a-session-secret-here
SESSION_MAX_AGE=86400000

# Frontend Configuration
FRONTEND_URL=https://crowe-crypto.fly.dev

# Feature Flags
ENABLE_TRADING=true
ENABLE_DEMO_MODE=false
ENABLE_WEBSOCKET=true

# Notification Services (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
DISCORD_WEBHOOK_URL=your-discord-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# API Limits
MAX_TRADES_PER_HOUR=100
MAX_ORDERS_PER_DAY=1000
MAX_WEBSOCKET_CONNECTIONS=100

# Trading Configuration
DEFAULT_SLIPPAGE_TOLERANCE=0.01
DEFAULT_GAS_LIMIT=300000
MIN_ORDER_SIZE_USD=10
MAX_ORDER_SIZE_USD=100000

# Bot Configuration
BOT_TRADING_ENABLED=false
BOT_MAX_POSITION_SIZE=1000
BOT_STOP_LOSS_PERCENTAGE=5
BOT_TAKE_PROFIT_PERCENTAGE=10

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress