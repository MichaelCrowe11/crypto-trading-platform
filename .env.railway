# Railway Environment Variables Template
# Copy these to Railway's Variables section in the project settings

# === REQUIRED VARIABLES ===

# Server Configuration
NODE_ENV=production
PORT=3000  # Railway will override this with $PORT

# === DATABASE (Provided by Railway PostgreSQL) ===
# DATABASE_URL - automatically provided by Railway PostgreSQL plugin
# DATABASE_PRIVATE_URL - automatically provided for internal connections

# === REQUIRED EXTERNAL SERVICES ===

# Redis (Use Railway Redis plugin or external service)
REDIS_URL=redis://default:password@redis-host:6379

# Supabase (Optional - if using Supabase for auth)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# MongoDB (Optional - for additional data storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/crypto-trading

# === EXCHANGE APIs (At least one required) ===

# Coinbase
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
COINBASE_PASSPHRASE=your-coinbase-passphrase

# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Kraken
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# === MARKET DATA APIs (At least one recommended) ===

COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key

# === BLOCKCHAIN RPCs (Optional - for wallet features) ===

ETHEREUM_RPC=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC=https://polygon-rpc.com
BSC_RPC=https://bsc-dataseed.binance.org
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# === WALLET CONFIGURATION (Optional) ===

WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id

# === SECURITY (REQUIRED) ===

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate-32-character-encryption-key

# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate-strong-jwt-secret

# === NOTIFICATIONS (Optional) ===

SLACK_WEBHOOK_URL=your-slack-webhook-url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# === MONITORING (Optional but recommended) ===

SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# === RAILWAY SPECIFIC ===

# Frontend URL (your Railway app URL)
FRONTEND_URL=https://your-app-name.railway.app

# CORS origins (comma separated)
CORS_ORIGINS=https://your-app-name.railway.app,http://localhost:3000

# Session configuration
SESSION_SECRET=generate-strong-session-secret
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=strict

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# === FEATURE FLAGS ===

ENABLE_TRADING=true
ENABLE_PAPER_TRADING=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false